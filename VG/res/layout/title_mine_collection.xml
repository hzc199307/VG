<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_height"
    android:gravity="center_vertical"
    android:padding="0.0px" >

    <!-- 背景色 -->

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/home_title_bg" />

    <!-- 左边的返回按钮 -->

    <LinearLayout
        android:id="@+id/mine_collection_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/title_left_icon_marginleft"
        android:singleLine="true"
        android:onClick="onClick" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/title_left_icon_marginleft"
            android:gravity="center_vertical"
            android:src="@drawable/title_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/title_left_tv_marginleftof_icon"
            android:text="路线收藏"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <!-- 右侧的查询按钮 -->

    <LinearLayout
        android:id="@+id/mine_collection_search"
        android:layout_width="@dimen/recommend_title_search_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:ellipsize="end"
        android:gravity="center"
        android:orientation="horizontal"
        android:singleLine="true" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/none"
            android:clickable="true"
            android:src="@drawable/title_search_icon" />
    </LinearLayout>

</RelativeLayout>