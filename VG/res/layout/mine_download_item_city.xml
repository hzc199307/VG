<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="51dp" >

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="back" >

        <ImageButton
            android:id="@+id/mine_download_item_city_delete_btn"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#e6342f"
            android:scaleType="centerInside"
            android:src="@drawable/mine_download_delete_icon" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="front" >

        <ImageView
            android:id="@+id/mine_download_item_city_bg"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:scaleType="centerCrop"
            android:src="@drawable/city_cinqueterre" />

        <View
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mine_download_item_city_shadow" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/mine_download_item_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:text="城市"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/mine_download_item_city_pinyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/mine_download_item_city_name"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/mine_download_item_city_name"
                android:text="City"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mine_download_item_city_update_btn"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#b33b3b3b"
            android:gravity="center"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.ne.vg.view.RoundProgressBar
                    xmlns:android_custom="http://schemas.android.com/apk/res/com.ne.vg"
                    android:id="@+id/mine_download_item_city_update_roundProgressBar"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android_custom:roundColor="#00000000"
                    android_custom:roundProgressColor="#C6E2FF"
                    android_custom:roundWidth="2dip"
                    android_custom:textIsDisplayable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="更新"
                    android:textColor="@color/black"
                    android:textSize="11sp" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.5Mb"
                android:textColor="@color/black"
                android:textSize="9sp" />
        </LinearLayout>
    </FrameLayout>

