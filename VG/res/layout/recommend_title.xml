<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44dip"
    android:gravity="center_vertical"
    android:padding="0.0px" >

    <ImageView
        android:id="@+id/home_title_iv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#555555" />

    <LinearLayout
        android:id="@+id/recommend_title_name"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:ellipsize="end"
        android:paddingLeft="96.0dip"
        android:paddingRight="96.0dip"
        android:singleLine="true" >
         <TextView
                android:id="@+id/recommend_top_text1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="推荐路线"
                android:textColor="#ffffff"
                android:textSize="20.0dip" />

         <TextView
                android:id="@+id/recommend_top_text2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="景点列表"
                android:textColor="#ffffff"
                android:textSize="20.0dip" />
        
    </LinearLayout>

    <ImageButton
        android:id="@+id/home_title_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dip"
        android:layout_centerVertical="true"
        android:background="@drawable/home_title_left_btn_selector"
        android:gravity="center"
        android:includeFontPadding="false" />

    <ImageButton
        android:id="@+id/home_title_left_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/home_title_right_btn_selector"
        android:gravity="center"
        android:layout_marginRight="5dip"
        android:includeFontPadding="false" />

</RelativeLayout>