<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/home_title_height"
    android:gravity="center_vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/home_title_bg" />

    <RelativeLayout
        android:id="@+id/search_title_all"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/search_title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="showMenu"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/search_title_menu_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/title_left_icon_marginleft"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/title_left_icon_marginleft"
                android:src="@drawable/home_title_menu_icon" />
        </LinearLayout>

        <EditText
            android:id="@+id/search_title_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_title_edit_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_left_edit_marginleft"
            android:layout_marginRight="@dimen/title_left_edit_marginright"
            android:background="@drawable/search_title_edit_bg"
            android:hint="我想去"
            android:inputType="text"
            android:paddingLeft="13dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#d5d5d5"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/search_title_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/search_title_edit_height"
            android:layout_alignRight="@id/search_title_edit"
            android:layout_centerVertical="true"
            android:background="@color/none"
            android:clickable="true"
            android:paddingLeft="@dimen/title_right_icon_paddingright"
            android:paddingRight="@dimen/title_right_icon_paddingright"
            android:src="@drawable/title_search_icon_gray" />
    </RelativeLayout>

</RelativeLayout>