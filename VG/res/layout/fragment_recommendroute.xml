<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recommend_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/recommendroute_vertical_margin"
    android:paddingLeft="@dimen/recommendroute_horizontal_margin"
    android:paddingRight="@dimen/recommendroute_horizontal_margin"
    android:paddingTop="@dimen/recommendroute_vertical_margin" >

    <!-- dividerHeight表示间距高度 -->

    <ListView
        android:id="@+id/recommendroute_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/recommend_bg"
        android:divider="@color/recommend_bg"
        android:dividerHeight="@dimen/recommendroute_listview_diverheight"
        android:gravity="center" >
    </ListView>

</LinearLayout>