<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="vertical" >

    <!-- 必去景点 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/bsid_necessary_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="此处必游："
            android:textColor="#fc6662"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="国立故宫博物馆   光化门   勤政殿"
            android:textColor="#0796fb"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 景点位置 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/bsid_location_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首尔市中路区世宗路1-1"
            android:textColor="#e8e8e8"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 景点交通 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/bsid_traffic_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搭乘地铁3号线至景福宫站下，从5号出口徒步约5分钟可达。\n或搭乘地铁5号线至光化门站下，从2号出口徒步约10分钟。"
            android:textColor="#e8e8e8"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 景点开放时间 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/bsid_time_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9：00-18：00，11月-2月至17：00，5-8月周六、日及节假日至19：00（入场至关门前1小时）逢周二休息。"
            android:textColor="#e8e8e8"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 景点网址链接 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/bsid_link_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.royalpalace.go.kr"
            android:textColor="#0796fb"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 景点电话 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/bsid_phone_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02-3700-3900"
            android:textColor="#0796fb"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 景点花费 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/bsid_cost_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成人3000韩元，7-18岁1500韩元"
            android:textColor="#e8e8e8"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>