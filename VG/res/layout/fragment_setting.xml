<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/setting_title"
        layout="@layout/title_setting"
        android:focusable="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_margin"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/setting_item_moreapp"
                        style="@style/setting_RlBtn_Style"
                        android:layout_width="match_parent" >

                        <TextView
                            style="@style/setting_RlBtn_tv_left_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更多应用推荐" />

                        <ImageView
                            style="@style/setting_RlBtn_iv_right_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mine_item_divider_height" />

                    <RelativeLayout
                        android:id="@+id/setting_item_deletecache"
                        style="@style/setting_RlBtn_Style"
                        android:layout_width="match_parent" >

                        <TextView
                            style="@style/setting_RlBtn_tv_left_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="清除缓存" />

                        <TextView
                            style="@style/setting_RlBtn_tv_right_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.23m" />

                        <ImageView
                            style="@style/setting_RlBtn_iv_right_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_margin"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/setting_item_feedback"
                        style="@style/setting_RlBtn_Style"
                        android:layout_width="match_parent" >

                        <TextView
                            style="@style/setting_RlBtn_tv_left_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="意见反馈" />

                        <ImageView
                            style="@style/setting_RlBtn_iv_right_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mine_item_divider_height" />

                    <RelativeLayout
                        android:id="@+id/setting_item_supportus"
                        style="@style/setting_RlBtn_Style"
                        android:layout_width="match_parent" >

                        <TextView
                            style="@style/setting_RlBtn_tv_left_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支持我们" />

                        <ImageView
                            style="@style/setting_RlBtn_iv_right_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mine_item_divider_height" />

                    <RelativeLayout
                        android:id="@+id/setting_item_checkupdates"
                        style="@style/setting_RlBtn_Style"
                        android:layout_width="match_parent" >

                        <TextView
                            style="@style/setting_RlBtn_tv_left_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="检查更新" />

                        <ImageView
                            style="@style/setting_RlBtn_iv_right_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/shadow_top_height"
            android:layout_gravity="top"
            android:background="@drawable/shadow_top" />
        
    </FrameLayout>

</LinearLayout>