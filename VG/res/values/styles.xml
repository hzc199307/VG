<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="NotificationContent">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_custom_style">
        <item name="android:layout_width">48dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:background">?android:listChoiceBackgroundIndicator</item>
    </style>

    <!--                           自定义style                            -->
    <!-- SettingFragment -->
    <style name="setting_RlBtn_Style">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_height">@dimen/setting_item_height</item>
        <item name="android:background">@drawable/mine_item_bg</item>
    </style>

    <style name="setting_RlBtn_tv_left_Style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/setting_item_tv_left_marginleft</item>
        <item name="android:textColor">@color/mine_item_tv_selector</item>
        <item name="android:textSize">@dimen/mine_item_tv</item>
    </style>

    <style name="setting_RlBtn_iv_right_Style">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/setting_item_ic_right_marginright</item>
        <item name="android:src">@drawable/mine_item_enter_icon</item>
    </style>

    <style name="setting_RlBtn_tv_right_Style">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/setting_item_tv_right_marginright</item>
        <item name="android:textColor">@color/mine_item_num_tv</item>
        <item name="android:textSize">@dimen/mine_item_num_tv</item>
    </style>
    
    <style name="bsid_item_icon_style">
        <item name="android:layout_width">@dimen/bsid_item_icon_width</item>
        <item name="android:layout_height">@dimen/bsid_item_icon_height</item>
        <item name="android:layout_marginLeft">@dimen/bsid_item_icon_marginleft</item>
        <item name="android:layout_marginRight">@dimen/bsid_item_icon_marginright</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>